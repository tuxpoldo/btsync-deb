#!/bin/sh
# prerm script for btsync-common
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <prerm> `remove'
#        * <old-prerm> `upgrade' <new-version>
#        * <new-prerm> `failed-upgrade' <old-version>
#        * <conflictor's-prerm> `remove' `in-favour' <package> <new-version>
#        * <deconfigured's-prerm> `deconfigure' `in-favour'
#          <package-being-installed> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
remove|deconfigure)
	# fix this insane i386/geode stuff...
	if [ -f /usr/lib/btsync-common/btsync-core-i686 ]; then
		# remove the symbolic link
		rm -f /usr/lib/btsync-common/btsync-core
	fi
	rm -f /usr/share/doc/btsync-common/btsync.conf.sample
	;;
upgrade)
	set +e
	# handle new btsync applications like btsync-gui if installed
	touch /var/run/btsync-common-updating
	pkill -SIGHUP btsync-gui
	# handle btsync-user if installed
	touch /var/run/btsync-user-updating
	pkill btsync-agent
	set -e
	;;
failed-upgrade)
	set +e
	# handle new btsync applications like btsync-gui if installed
	if [ -f /var/run/btsync-common-updating ]; then
		rm -f /var/run/btsync-common-updating
		pkill -SIGHUP btsync-gui
	fi
	# handle btsync-user if installed
	if [ -f /var/run/btsync-user-updating ]; then
		rm -f /var/run/btsync-user-updating
	fi
	set -e
	;;
*)
	echo "prerm called with unknown argument \`$1'" >&2
	exit 1
	;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
